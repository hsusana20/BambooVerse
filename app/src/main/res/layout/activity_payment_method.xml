<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    tools:context=".PaymentMethod">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="414dp"
        android:layout_height="434dp"
        android:layout_marginTop="213dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle_bg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="470dp"
        android:text="PAYMENT METHOD"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnG"
        android:layout_width="190dp"
        android:layout_height="74dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="363dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="294dp"
        android:background="@drawable/payment_btn"
        android:text="GCash"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBP"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="462dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="199dp"
        android:background="@drawable/payment_btn"
        android:text="BPI"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="196dp"
        android:layout_height="55dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="658dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rectangle_btn3"
        android:text="BACK"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNote"
        android:layout_width="217dp"
        android:layout_height="38dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="418dp"
        android:text="Note: After payment, send the receipt to our messenger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="252dp"
        android:layout_height="64dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/rectangle_btn3"
        android:text="SEND RECEIPT"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="278dp"
        android:layout_height="217dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="514dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bambooverse_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>