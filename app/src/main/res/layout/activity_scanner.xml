<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    tools:context=".Scanner">

    <ImageView
        android:id="@+id/imageBg"
        android:layout_width="339dp"
        android:layout_height="656dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg2" />

    <TextView
        android:id="@+id/textViewScan"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="655dp"
        android:text="QR/BARCODE SCANNER "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCamera"
        style="@style/ButtonColor1"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="578dp"
        android:text="Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGallery"
        style="@style/ButtonColor1"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="576dp"
        android:text="Gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageIV"
        android:layout_width="272dp"
        android:layout_height="255dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="290dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_android_black_24dp" />

    <Button
        android:id="@+id/btnScan"
        style="@style/ButtonColor1"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="451dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="228dp"
        android:text="SCAN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewResult"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="494dp"
        android:layout_marginEnd="321dp"
        android:layout_marginBottom="218dp"
        android:text="Result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTv"
        android:layout_width="254dp"
        android:layout_height="126dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="535dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="70dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>