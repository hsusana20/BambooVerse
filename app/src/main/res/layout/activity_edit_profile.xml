<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <ImageView
        android:id="@+id/imageViewB"
        android:layout_width="409dp"
        android:layout_height="157dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="574dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg2" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="122dp"
        android:layout_height="101dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="614dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/EditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="588dp"
        android:text="Edit Profile"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="329dp"
        android:layout_height="483dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg2" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="279dp"
        android:layout_height="56dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="430dp"
        android:background="@drawable/txt_bg3"
        android:drawablePadding="8dp"
        android:hint="Username"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextCN"
        android:layout_width="279dp"
        android:layout_height="56dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="355dp"
        android:background="@drawable/txt_bg3"
        android:drawablePadding="8dp"
        android:hint="Cellphone No."
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="316dp"
        android:text="To Change Password:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextOldPass"
        android:layout_width="279dp"
        android:layout_height="56dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/txt_bg3"
        android:drawablePadding="8dp"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNewPass"
        android:layout_width="279dp"
        android:layout_height="56dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/txt_bg3"
        android:drawablePadding="8dp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button25"
        style="@style/ButtonColor1"
        android:layout_width="233dp"
        android:layout_height="67dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="585dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="79dp"
        android:text="SAVE CHANGES"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImageViewBack"
        android:layout_width="58dp"
        android:layout_height="42dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="339dp"
        android:layout_marginBottom="678dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>